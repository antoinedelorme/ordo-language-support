{
    "scopeName": "source.ordo",
    "patterns": [
        {
            "name": "support.class.ordo",  
            "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"  
        },
        {
            "name": "variable.language.object.ordo",  
            "match": "\\b([a-z_][a-zA-Z0-9_]*)\\b"  
        },
        {
            "name": "constant.language.primitive.ordo", 
            "match": "\\b(true|false|null|[0-9]+|\"[^\"]*\"|'[^']*')\\b"  
        }
    ]
}
